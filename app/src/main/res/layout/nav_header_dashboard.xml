<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/topbg"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_userpic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/profilepic_placeholder" />

    <LinearLayout
        android:id="@+id/linearLayout_userdetail_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/imageView_userpic"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:ellipsize="marquee"
            android:id="@+id/textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15sp"
            android:singleLine="true" />

        <TextView
            android:ellipsize="marquee"
            android:id="@+id/textView_emailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:singleLine="true" />

        <TextView
            android:ellipsize="marquee"
            android:id="@+id/textView_mobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:singleLine="true" />

    </LinearLayout>


</RelativeLayout>
