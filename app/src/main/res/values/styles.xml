<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>

    </style>

    <style name="TextViewTitleStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextViewTitle14Style" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TextViewTitle14BoldStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TextViewTitleWhiteStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:textColor">@color/white1</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextViewTitleSmallStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="TextViewTitle12BoldStyle" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">bold</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="TextViewSmallCapsStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/black_new</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_new</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="TextViewSmall10Style" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/black_new</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textColor">@color/black_new</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="TextViewMiniCapsStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/black_new</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_new</item>
        <item name="android:textSize">8sp</item>

    </style>

    <style name="TextViewSmallCapsWhiteStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/black_new</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white1</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="TextViewRadioStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue1</item>
        <item name="colorAccent">@color/blue1</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/textcolordark
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="CustomTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:color">@color/grey</item>
    </style>

    <style name="RadioStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/grey</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/textcolordark</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
    </style>

</resources>
