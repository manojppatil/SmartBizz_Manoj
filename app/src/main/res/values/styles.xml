    <style name="CustomTextProfileAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:color">@color/textcolordark</item>
        <item name="android:textColorHint">@color/textcolordark</item>
        <item name="android:textColor">@color/textcolordark</item>
    </style>

